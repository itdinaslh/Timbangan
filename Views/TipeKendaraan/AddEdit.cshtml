@model TipeKendaraan

<form asp-action="Store" asp-controller="TipeKendaraan" method="post">
    <div class="modal-header">
        @if (Model.TipeKendaraanID != 0)
        {
                <h5 class="model-title">Edit Master Tipe Kendaraan</h5>
        }
        else
        {
                <h5 class="modal-title">Tambah Master Tipe Kendaraan</h5>
        }
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="TipeKendaraanID">
        <div class="form-group mb-3">
            <label>Nama Tipe</label>
            <input type="text" asp-for="NamaTipe" class="form-control" autofocus autocomplete="off" />
            <span asp-validation-for="NamaTipe" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Inisial</label>
            <input type="text" asp-for="Kode" class="form-control" autocomplete="off" />
            <span asp-validation-for="Kode" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>