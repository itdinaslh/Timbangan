@model ClientVM

<form asp-action="Store" asp-controller="Client" method="post">
    <div class="modal-header">
        <h5 class="model-title">Tambah/Edit Ekspenditur</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="Client.ClientID" />
        <div class="form-group mb-3">
            <label>Nama Ekspenditur</label>
            <input asp-for="Client.ClientName" class="form-control" required autofocus autocomplete="off" />          
        </div>
        <div class="form-group mb-3">
            <label>Status</label>
            <select asp-for="Client.StatusID" class="form-control sStatus"></select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>
