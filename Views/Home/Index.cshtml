@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col">
        <div class="h-100">
            <div class="row mb-3 pb-1">
                <div class="col-12">
                    <div class="d-flex align-items-lg-center flex-lg-row flex-column">
                        <div class="flex-grow-1">
                            <h4 class="fs-16 mb-1">Monitoring Bantargebang</h4>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-4 col-md-12">
        <div class="card bg-success" style="min-height:200px;">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="fw-bold text-white mb-0">Jumlah Truk Dumping</p>
                        <h2 class="mt-4 ff-secondary fw-semibold text-white">85 Truk</h2>
                        
                    </div>
                </div>                
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-12">
        <div class="card bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="fw-bold text-white mb-0">Rata-rata per dwell</p>
                        <h2 class="mt-4 ff-secondary fw-semibold text-white">300 Truk</h2>
                        <p class="mb-0 text-white-50"><span class="badge badge-soft-light mb-0"><i class="ri-arrow-down-line align-middle"></i> 0.24 % </span> vs. previous month</p>
                    </div>
                </div>                
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-12">
        <div class="card bg-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="fw-bold text-white mb-0">Statistik Kumulatif</p>
                        <h2 class="mt-4 ff-secondary fw-semibold text-white">200 Truk</h2>
                        <p class="mb-0 text-white-50"><span class="badge badge-soft-light mb-0"><i class="ri-arrow-down-line align-middle"></i> 0.24 % </span> vs. previous month</p>
                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>