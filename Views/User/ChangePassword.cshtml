@model ChangeModel

<form asp-action="ChangePassword" asp-controller="User" method="post">
    <div class="modal-header">
        @if (Model.UserID != null)
        {
            <h5 class="model-title">Edit User</h5>
        }
        else
        {
            <h5 class="modal-title">Tambah User</h5>
        }
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="UserID" />
        <div class="form-group mb-3">
            <label>New Password</label>
            <input type="password" asp-for="Password" class="form-control" autofocus autocomplete="off" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Confirm Password</label>
            <input asp-for="Confirm" class="form-control" />
            <span asp-validation-for="Confirm" class="text-danger"></span>
        </div>   
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>