@model ManageUserRolesVM

@{
    ViewBag.Parent = "Registrasi";
    ViewBag.Title = "Users";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">@ViewBag.Title</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">@ViewBag.Parent</a></li>
                    <li class="breadcrumb-item active">Manage User Roles</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-controller="User" asp-action="UpdateRoles" asp-route-id="@Model.UserID">
                    <input type="hidden" asp-for="@Model.UserID" />
                    <table class="table table-striped" id="userRolesTable">
                        <thead>
                            <tr>
                                <th>Role</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.UserRoles.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        <input asp-for="@Model.UserRoles[i].RoleName" type="hidden" />
                                            @Model.UserRoles[i].RoleName
                                    </td>
                                    <td>
                                        <div class="form-check m-1">
                                            <input asp-for="@Model.UserRoles[i].Selected" class="form-check-input" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-lg-12 text-center" style=" padding: 20px 20px 0px 0px">
                        <a asp-action="Index" asp-controller="User" class="btn bg-danger m-r-2 text-white">Kembali</a>
                        <button type="submit" id="save" class="btn bg-primary text-white">                            
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
